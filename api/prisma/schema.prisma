generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  cpf      String @unique
  password String

  @@map("admin")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  cpf      String @unique
  password String

  package Package[]

  @@map("user")
}

model Deliveryman {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  cpf      String @unique
  password String

  delivery Delivery[]

  @@map("deliveryman")
}

model Package {
  id String @id @default(uuid())

  delivery Delivery?

  user_id    String
  fk_user_id User   @relation(fields: [user_id], references: [id])

  @@map("package")
}

model Delivery {
  id     String @id @default(uuid())
  status String

  package_id    String  @unique
  fk_package_id Package @relation(fields: [package_id], references: [id])

  deliveryman_id    String
  fk_deliveryman_id Deliveryman @relation(fields: [deliveryman_id], references: [id])

  @@map("delivery")
}
